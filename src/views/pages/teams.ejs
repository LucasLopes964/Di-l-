<link rel="stylesheet" href="/css/teams.css">

<div class="container">
  <h1>Equipes</h1>

  <div class="search-bar">
    <input type="text" placeholder="Pesquisar...">
    <button class="filter-btn">Filtrar üîç</button>
  </div>

  <% const equipes = [1, 2]; %>
  <% equipes.forEach((equipe, idx) => { %>
    <div class="equipe-card">
      <div class="card-top">
        <div class="avatars">
          <% for (let i = 0; i < 5; i++) { %>
            <div class="avatar-placeholder"><%= i + 1 %></div>
          <% } %>
        </div>
        <div class="tag">INSPE√á√ÉO <%= idx === 0 ? 7 : 4 %></div>
      </div>
      <div class="equipe-card-content">
        <p class="nomes">[Nomes dos integrantes da equipe <%= idx + 1 %>]</p>
        <p class="equipe-id">EQUIPE <%= idx + 3 %></p>
      </div>
    </div>
  <% }); %>
</div>

<style>
  .container {
    padding: 16px;
    font-family: sans-serif;
  }

  h1 {
    font-size: 22px;
    font-weight: bold;
    margin-bottom: 16px;
  }

  .search-bar {
    display: flex;
    gap: 8px;
    margin-bottom: 16px;
  }

  .search-bar input {
    flex: 1;
    padding: 10px;
    border-radius: 8px;
    border: 1px solid #ccc;
  }

  .filter-btn {
    padding: 10px 14px;
    border-radius: 8px;
    border: 1px solid #ccc;
    background: white;
    cursor: pointer;
  }

  .equipe-card {
    background: white;
    border-radius: 10px;
    padding: 12px 14px;
    box-shadow: 0 1px 6px rgba(0, 0, 0, 0.08);
    margin-bottom: 14px;
  }

  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }

  .avatars {
    display: flex;
  }

  .avatar-placeholder {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #ccc;
    margin-right: -8px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 11px;
    color: white;
    font-weight: bold;
    border: 2px solid white;
  }

  .tag {
    background-color: #e2e8f0;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    color: #333;
  }

  .nomes {
    font-size: 14px;
    color: #111;
    margin-bottom: 4px;
  }

  .equipe-id {
    font-size: 12px;
    color: #666;
    font-weight: 500;
  }
</style>
